<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="150.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ListViewRowController">
   <children>
      <HBox fx:id="container" prefHeight="150.0" prefWidth="900.0" spacing="30.0">
         <children>
            <ImageView fx:id="filmPoster" fitHeight="150.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="filmTitle" alignment="CENTER" contentDisplay="CENTER" prefHeight="47.0" prefWidth="130.0" text="Film Title" textAlignment="CENTER">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="filmGenre" alignment="CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="81.0" text="Film Genre" textAlignment="CENTER" textFill="#fc0000">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="filmActors" alignment="CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="81.0" text="Film Actors" textAlignment="CENTER" />
                  <Label fx:id="filmDirector" alignment="CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="81.0" text="Film Director" textAlignment="CENTER" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <Label fx:id="filmDescription" prefHeight="135.0" prefWidth="332.0" text="filmDescription">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="showFilmDetails" mnemonicParsing="false" onAction="#showMovieDetailPage" text="Show Film Details">
               <HBox.margin>
                  <Insets top="50.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
