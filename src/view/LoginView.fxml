<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!-- LogIn View uses Login Controller (Controller is set in fx) -->

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
   <children>
      <Label fx:id="isConnected" alignment="CENTER" layoutX="118.0" layoutY="30.0" text="Status" textAlignment="CENTER" textFill="#f80606">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="txtUsername" alignment="CENTER" layoutX="58.0" layoutY="86.0" prefHeight="39.0" prefWidth="189.0" promptText="User Name">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="txtPassword" alignment="CENTER" layoutX="58.0" layoutY="150.0" prefHeight="39.0" prefWidth="189.0" promptText="Password">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Button layoutX="58.0" layoutY="204.0" mnemonicParsing="false" onAction="#LoginCheckCustomer" prefHeight="30.0" prefWidth="189.0" text="Customer Login">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="58.0" layoutY="243.0" mnemonicParsing="false" onAction="#LoginCheckManager" prefHeight="30.0" prefWidth="189.0" text="Staff Login">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
