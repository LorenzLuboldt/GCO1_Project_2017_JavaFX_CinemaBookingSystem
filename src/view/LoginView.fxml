<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<!-- LogIn View uses Login Controller (Controller is set in fx) -->


<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
   <center>
      <AnchorPane prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: black;">
         <children>
            <Label fx:id="isConnected" alignment="CENTER" layoutX="592.0" layoutY="284.0" text="Welcome to cinestar" textAlignment="CENTER" textFill="#f80606">
               <font>
                  <Font name="BrowalliaUPC Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="txtUsername" alignment="CENTER" layoutX="606.0" layoutY="335.0" prefHeight="39.0" prefWidth="189.0" promptText="User Name" style="-fx-border-radius: 0; -fx-border-color: white; -fx-border-width: 3; -fx-background-color: black;" styleClass="text_field">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <TextField fx:id="txtPassword" alignment="CENTER" layoutX="606.0" layoutY="399.0" prefHeight="39.0" prefWidth="189.0" promptText="Password">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <Button layoutX="606.0" layoutY="453.0" mnemonicParsing="false" onAction="#LoginCheckCustomer" prefHeight="30.0" prefWidth="189.0" text="Customer Login">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button layoutX="606.0" layoutY="492.0" mnemonicParsing="false" onAction="#LoginCheckManager" prefHeight="30.0" prefWidth="189.0" text="Staff Login">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
