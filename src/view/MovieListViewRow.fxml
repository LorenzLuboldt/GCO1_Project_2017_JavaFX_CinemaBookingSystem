<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="150.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MovieListViewRowController">
   <children>
      <HBox fx:id="container" prefHeight="150.0" prefWidth="900.0" spacing="10.0">
         <children>
            <ImageView fx:id="filmPoster" fitHeight="150.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true" />
            <VBox prefHeight="150.0" prefWidth="349.0">
               <children>
                  <Label fx:id="filmTitle" alignment="CENTER" contentDisplay="CENTER" prefHeight="44.0" prefWidth="419.0" text="Film Title" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="filmGenre" alignment="CENTER" contentDisplay="CENTER" prefHeight="33.0" prefWidth="363.0" text="Film Genre" textAlignment="CENTER" textFill="#fc0000">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="filmActors" alignment="CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="372.0" text="Film Actors" textAlignment="CENTER" textFill="#a1a1a1" textOverrun="CLIP">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <Label fx:id="filmDirector" alignment="CENTER" contentDisplay="CENTER" prefHeight="41.0" prefWidth="368.0" text="Film Director" textAlignment="CENTER" textFill="#a1a1a1" textOverrun="CLIP" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <TextArea fx:id="filmDescription" editable="false" prefHeight="150.0" prefWidth="256.0" wrapText="true">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font name="Lao UI" size="14.0" />
               </font>
            </TextArea>
            <Button fx:id="showFilmDetails" mnemonicParsing="false" onAction="#showMovieDetailPage" styleClass="button_listview" text="Book Now">
               <HBox.margin>
                  <Insets left="20.0" top="60.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
